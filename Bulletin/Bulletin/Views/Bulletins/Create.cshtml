            <li role="presentation"><a href="#forecast07" aria-controls="forecast07" role="tab" data-toggle="tab">День 7</a></li>
            <li role="presentation"><a href="#forecast08" aria-controls="forecast08" role="tab" data-toggle="tab">День 8</a></li>
            <li role="presentation"><a href="#forecast09" aria-controls="forecast09" role="tab" data-toggle="tab">День 9</a></li>
            <li role="presentation"><a href="#forecast10" aria-controls="forecast10" role="tab" data-toggle="tab">День 10</a></li>
            </ul>

            <div class="tab-content">
            <div role="tabpanel" class="tab-pane active" id="forecast01">@Html.Partial("_PartialCreateForm", "forecast01")</div>
            <div role="tabpanel" class="tab-pane" id="forecast02">@Html.Partial("_PartialCreateForm", "forecast02")</div>
