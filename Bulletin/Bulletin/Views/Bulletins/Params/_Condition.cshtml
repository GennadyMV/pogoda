@using Bulletin.Repositories;
@using Bulletin.Models;
@using Bulletin.Common;



    <div class="panel panel-primary">
            <div class="panel-heading lg">Ночь</div>
            <div class="panel-body">
                <table class="table">
                    <tbody>
                        <tr class="something">
                            <td class="col-md-1">
                                Явления:
                            </td>
                            <td class="col-md-4">
                                <select id="bulletin-@(ViewBag.forecast)-condition-night" class="selectpicker" data-style="btn-primary" data-live-search="true" data-width="100%">
                                    @foreach (var condition in ((IRepository<Condition>)(new ConditionRepository())).GetAll())
                                    {
                                        <option>@condition.Name</option>
                                    }                                                        
                                </select>
                            </td>
                            <td class="col-md-1">
                                <div class="checkbox pull-left">
                                    <label><input type="checkbox" value="">местами</label>
                                </div>
                            </td>
                            <td class="col-md-6">
                                <div class="checkbox pull-left">
                                    <label><input type="checkbox" value="">временами</label>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>                                           
            </div>
        </div>

        <div class="panel panel-success">
            <div class="panel-heading">День</div>
            <div class="panel-body">                                       
                <table class="table">
                    <tbody>
                        <tr class="something">
                            <td class="col-md-1">
                                Явления:
                            </td>
                            <td class="col-md-4">
                                <select id="bulletin-@(ViewBag.forecast)-condition-day" class="selectpicker" data-style="btn-primary" data-live-search="true" data-width="100%">
                                    @foreach (var condition in ((IRepository<Condition>)(new ConditionRepository())).GetAll())
                                    {
                                        <option>@condition.Name</option>
                                    }                                                        
                                </select>
                            </td>
                            <td class="col-md-1">
                                <div class="checkbox pull-left">
                                    <label><input type="checkbox" value="">местами</label>
                                </div>
                            </td>
                            <td class="col-md-6">
                                <div class="checkbox pull-left">
                                    <label><input type="checkbox" value="">временами</label>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>                                 
            </div>
        </div>
                                            