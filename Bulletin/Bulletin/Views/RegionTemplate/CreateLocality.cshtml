@using Bulletin.Models
@{
    ViewBag.Title = "Населённый пункт";
}

@if (@ViewBag.Error != null)
{
    <h2>@ViewBag.Error</h2>
}

<h2>Добавить населённый пункт</h2>

@Html.ValidationSummary("Create was unsuccessful. Please correct the errors and try again.")

@using (Html.BeginForm("Create", "RegionTemplate", new { ReturnUrl = ViewBag.ReturnUrl },
            FormMethod.Post, new { @class = "form-horizontal" }))
{
    
    <div class="form-group">
        <label for="name" class="col-sm-2 control-label">Наименование:</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="Name" id="Name" placeholder="Населённый пункт">      
        </div>
    </div>
    
    <div class="form-group">
        <label for="name" class="col-sm-2 control-label">Градация по ветру:</label>
        <div class="col-sm-10">
            <input type="numeric" class="form-control" name="Deltawind" value="2" id="Deltawind" placeholder="Градация по ветру">      
        </div>
    </div>
    
    <div class="form-group">
        <label for="name" class="col-sm-2 control-label">Градация по температуре:</label>
        <div class="col-sm-10">
            <input type="numeric" class="form-control" name="Deltatemperature" value="2" id="Deltatemperature" placeholder="Градация по температуре">      
        </div>
    </div>

    @Html.Hidden("Territory", (int)Territory.Locality)
    

    
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Сохранить</button>
        </div>
    </div>

    
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">    
            <div>
                @Html.ActionLink("Назад", "Index")
            </div>
        </div>
    </div>

    
    
} 
