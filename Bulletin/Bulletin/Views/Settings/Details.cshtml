@{
    ViewBag.Title = "Настройки";
}

<h2>Настройки</h2>

<form class="form-horizontal">
  <div class="form-group">
    <label for="smtp_host" class="col-sm-2 control-label">Сервер SMTP:</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="smtp_host" name="smtp_host" value="@Model.SMTP_HOST"  disabled>
    </div>
  </div>

  <div class="form-group">
    <label for="smtp_port" class="col-sm-2 control-label">Порт:</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="smtp_port" name="smtp_port" value="@Model.SMTP_PORT"  disabled>
    </div>
  </div>

  <div class="form-group">
    <label for="smtp_user" class="col-sm-2 control-label">Пользователь:</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="smtp_user" name="smtp_user" value="@Model.SMTP_USER"  disabled>
    </div>
  </div>

  <div class="form-group">
    <label for="msg_from" class="col-sm-2 control-label">От кого:</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="msg_from" name="msg_from" value="@Model.MSG_FROM"  disabled>
    </div>
  </div>

  <div class="form-group">
    <label for="msg_subject" class="col-sm-2 control-label">Тема:</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="msg_subject" name="msg_subject" value="@Model.MSG_SUBJECT"  disabled>
    </div>
  </div>

  
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      @Html.ActionLink("Редактировать", "Edit", new { id=Model.ID })
    </div>
  </div>
</form>

