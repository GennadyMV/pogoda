@using Bulletin.Models

@{
    ViewBag.Title = "Территория";
}



<h2>Просмотр территории</h2>

    <fieldset>
        <legend>Поля</legend>
        <p>
            Наименование:
            @Html.Encode(Model.Name)
        </p>     

        <h5>Административные районы и населённые пункты:</h5>
        @foreach (var item in @Model.Regions)
        {
            @item.Name
            <br />
        }
        
    </fieldset>
    <p>
        @Html.ActionLink("Редактировать", "Edit", new { id = Model.ID }) |
        @Html.ActionLink("Назад", "Index")
    </p>