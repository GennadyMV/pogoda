@{
    ViewBag.Title = "Административный район или населённый пункт";
}

<h2>Административный район или населённый пункт</h2>

@Html.ValidationSummary("Create was unsuccessful. Please correct the errors and try again.")

@using (Html.BeginForm("Edit", "Region", new { id = @Model.ID },
            FormMethod.Post, new { @class = "form-horizontal" }))
{   
    <div class="form-group">
        <label for="name" class="col-sm-2 control-label">Наименование:</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" name="Name" id="Name" placeholder="Административный район или населённый пункт" value="@Model.Name">      
        </div>
    </div>

    <div class="form-group"> 
        <label for="name" class="col-sm-2 control-label">Градация по ветру:</label>
        <div class="col-sm-10">
          <input type="numeric" class="form-control" name="Deltawind" value="@Model.Deltawind" id="Deltawind" placeholder="Градация по ветру">      
        </div>
    </div>
    
    <div class="form-group"> 
        <label for="name" class="col-sm-2 control-label">Градация по температуре:</label>
        <div class="col-sm-10">
            <input type="numeric" class="form-control" name="Deltatemperature" value="@Model.Deltatemperature" id="Deltawind" placeholder="Градация по температуре">      
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <button type="submit" class="btn btn-default">Изменить</button>
        </div>
  </div>

        <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
    
        <div>
        @Html.ActionLink("Назад", "Index")
    </div>
        </div>
            </div>

    
    
} 
